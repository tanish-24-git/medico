# ============================================
# MedicoChatbot Environment Variables
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql+asyncpg://medico:your_secure_postgres_password_here@postgres:5432/medico

# ============================================
# API KEYS
# ============================================
# Groq API Key - Get from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Pinecone API Key - Get from: https://www.pinecone.io
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=medico-knowledge

# ============================================
# FIREBASE AUTHENTICATION
# ============================================
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
ENVIRONMENT=production
SECRET_KEY=your_very_long_and_random_secret_key_at_least_32_characters
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# CORS & SECURITY
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost

# ============================================
# GROQ CONFIGURATION
# ============================================
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=2048
GROQ_TEMPERATURE=0.7

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost/api/v1

# ============================================
# OPTIONAL: MONITORING
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
